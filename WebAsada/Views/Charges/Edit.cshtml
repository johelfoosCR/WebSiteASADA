@model WebAsada.ViewModels.DetailsChargeVM

<partial name="_PageTitle" model="@("Modificar Cargo")" />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <partial name="../Charges/Partial/_Editor" model="Model" />
            <partial name="_GeneralEntityLayout" model="Model" />
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script> 
        $("#chargeTypeSelect").change(function () {
            $('#cubicMeterFromInput').prop('disabled', !($('#chargeTypeSelect').val() === "True"));
            $('#cubicMeterToInput').prop('disabled', !($('#chargeTypeSelect').val() === "True"));
        });
    </script>
}
