@model WebAsada.ViewModels.UpdatePersonTypeVM
 
<partial name="_PageTitle" model="@("Crear Tipo Persona")" />
<div class="row">
    <div class="col-md-11">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="PersonTypeCode" class="control-label"></label>
                        <input asp-for="PersonTypeCode" class="form-control" />
                        <span asp-validation-for="PersonTypeCode" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <partial name="_GeneralEntityLayout" model="Model" />
        </form>
    </div> 
</div> 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
