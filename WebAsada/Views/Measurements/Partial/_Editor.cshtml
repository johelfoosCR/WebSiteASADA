@model WebAsada.ViewModels.MeasurementVM 
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Year" class="control-label"></label>
            <input asp-for="Year" class="form-control" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="MonthId" class="control-label"></label>
            <select asp-for="MonthId" class="form-control" asp-items="ViewBag.MonthId"></select>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="ReadUserId" class="control-label"></label>
            <select asp-for="ReadUserId" class="form-control" asp-items="ViewBag.ReadUserId"></select>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="form-group">
            <label asp-for="ReadDate" class="control-label"></label> 
            <input asp-for="ReadDate" asp-format="{0:yyyy-MM-dd}" class="form-control" />
            <span asp-validation-for="ReadDate" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label asp-for="DateFrom" class="control-label"></label> 
            <input asp-for="DateFrom" asp-format="{0:yyyy-MM-dd}" class="form-control" />
            <span asp-validation-for="DateFrom" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label asp-for="DateTo" class="control-label"></label> 
            <input asp-for="DateTo" asp-format="{0:yyyy-MM-dd}" class="form-control" />
            <span asp-validation-for="DateTo" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label asp-for="MaxPaymentDate" class="control-label"></label> 
            <input asp-for="MaxPaymentDate" asp-format="{0:yyyy-MM-dd}" class="form-control" />
            <span asp-validation-for="MaxPaymentDate" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="MessageOfTheMonth" class="control-label"></label>
            <textarea rows="4" asp-for="MessageOfTheMonth" class="form-control"></textarea>
            <span asp-validation-for="MessageOfTheMonth" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="PaymentPlace" class="control-label"></label>
            <textarea rows="4" asp-for="PaymentPlace" class="form-control"></textarea>
            <span asp-validation-for="PaymentPlace" class="text-danger"></span>
        </div>
    </div>
</div>
<partial name="_UpdateButtons" /> 