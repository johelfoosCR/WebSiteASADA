@model WebAsada.ViewModels.SystemUserVM
@inject WebAsada.Services.IYesNoOptions yesNoCollection

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="FullName" class="control-label"></label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <label asp-for="IsActive" class="control-label"></label>
            <select id="IsActiveOptions" asp-for="IsActive" asp-items="yesNoCollection.GetOptions()" class="form-control"></select>
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <label asp-for="IsAdministrator" class="control-label"></label>
            <select id="VatCategoryOption" asp-for="IsAdministrator" asp-items="yesNoCollection.GetOptions()" class="form-control"></select>
            <span asp-validation-for="IsAdministrator" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <label asp-for="IsOperational" class="control-label"></label>
            <select id="VatCategoryOption" asp-for="IsOperational" asp-items="yesNoCollection.GetOptions()" class="form-control"></select>
            <span asp-validation-for="IsOperational" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="row">
    @if (Model != null && string.IsNullOrEmpty(Model.Id))
    {
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
    }
    else
    {
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" disabled ="disabled" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input value="@Guid.NewGuid().ToString()" type="password" disabled="disabled" class="form-control" />
            </div>
        </div>
        <div class="col-md-4 vertical-align">
            <div class="form-group">
                @Html.ActionLink("Cambiar Contraseña", "ChangePassword", "SystemUsers", new { Model.Id }, new { @class = "btn btn-info" })
            </div>
        </div>
    }

</div>

<partial name="_UpdateButtons" /> 