<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebAsada</title>

    <link rel="stylesheet" asp-href-include="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" asp-href-include="~/lib/mvc-grid/css/*.css" />
    <link rel="stylesheet" asp-href-include="~/lib/SweetAlert2/css/sweetalert2.min.css" />
    <link rel="stylesheet" asp-href-include="~/lib/bootstrap-select/1.13.12/content/Content/bootstrap-select.min.css">
    <link rel="stylesheet" asp-href-include="~/lib/font-awsome/css/all.min.css">
    <link href="~/lib/LigthBoostrapDashboard/css/light-bootstrap-dashboard.css" rel="stylesheet" />
     
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="wrapper">
        <div class="sidebar" data-image="~/img/LOGO.png" data-color="blue">
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="simple-text">
                        Inicio
                    </a>
                </div>

                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Dashboard")">
                            <i class="fas fa-2x fa-chart-line"></i><span style="margin-left:10px">Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <div class="nav-link accordions">
                            <div>
                                <a data-target="#collapseSecurity" href="#" data-toggle="collapse">
                                    <i class="fas fa-2x fa-user"></i><span style="margin-left:10px">Seguridad</span>
                                </a>
                            </div>
                            <div id="collapseSecurity" class="card-collapse collapse">
                                <div class="card-body">
                                    @Html.ActionLink("Usuarios", "Index", "SystemUsers")
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="nav-item">
                        <div class="nav-link accordions">
                            <div>
                                <a data-target="#collapseOne" href="#" data-toggle="collapse">
                                    <i class="fas fa-2x fa-clipboard"></i><span style="margin-left:10px">Catalogos</span>
                                </a>
                            </div>
                            <div id="collapseOne" class="card-collapse collapse">
                                <div class="card-body">
                                    @Html.ActionLink("Tipos de Cargos", "Index", "ChargeType")
                                    <br />
                                    @Html.ActionLink("Cargos", "Index", "Charges")
                                    <br />
                                    @Html.ActionLink("Tipos Personas", "Index", "PersonTypes")
                                    <br />
                                    @Html.ActionLink("Tipos Identificación", "Index", "IdentificationTypes")
                                    <br />
                                    @Html.ActionLink("Monedas", "Index", "Currency")
                                    <br />
                                    @Html.ActionLink("Tipos Contrato", "Index", "ContractType")
                                    <br />
                                    @Html.ActionLink("Tipos Producto", "Index", "ProductTypes")
                                    <br />
                                    @Html.ActionLink("Meses", "Index", "Months")
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="nav-item">
                        <div class="nav-link accordions">
                            <div>
                                <a data-target="#collapseRegister" href="#" data-toggle="collapse">
                                    <i class="fas fa-2x fa-address-book"></i><span style="margin-left:10px">Registro</span>
                                </a>
                            </div>
                            <div id="collapseRegister" class="card-collapse collapse">
                                <div class="card-body">
                                    @Html.ActionLink("Proveedores", "Index", "Supplier")
                                    <br />
                                    @Html.ActionLink("Personas", "Index", "Person")
                                    <br />
                                    @Html.ActionLink("Propiedades", "Index", "Estates")
                                    <br />
                                    @Html.ActionLink("Medidores", "Index", "WaterMeter")
                                    <br />
                                    @Html.ActionLink("Contratos", "Index", "Contract")
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Measurements")">
                            <i class="fas fa-2x fa-chart-line"></i><span style="margin-left:10px">Lecturas</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <div class="nav-link accordions">
                            <div>
                                <a data-target="#collapseReports" data-toggle="collapse">
                                    <i class="fas fa-2x fa-file-alt"></i><span style="margin-left:10px">Reportes</span>
                                </a>
                            </div>
                            <div id="collapseReports" class="card-collapse collapse">
                                <div class="card-body">
                                    @Html.ActionLink("Recibos", "Index", "MeasurementReports")
                                    <br />
                                    @Html.ActionLink("Importar Rubros", "Index", "Person")
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg " color-on-scroll="500">
                <div class="container-fluid">
                    <a class="navbar-brand">Hola @User.Identity.Name!!</a>
                    <div class="collapse navbar-collapse justify-content-end" id="navigation">
                        <ul class="nav navbar-nav">
                            <li class="nav-item">
                                <form class="form-inline" asp-area="" asp-controller="Login" asp-action="LogOutAsync" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <button type="submit" class="nav-link btn btn-link">Cerrar Sesión</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script defer src="~/lib/font-awsome/js/all.min.js"></script>
    <script src="~/lib/mvc-grid/js/mvc-grid.js"></script>
    <script src="~/lib/bootstrap-select/1.13.12/content/Scripts/bootstrap-select.min.js"></script>  
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/SweetAlert2/js/sweetalert2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>
    <script src="~/lib/canvasjs/jquery.canvasjs.min.js"></script>
    <script>
        [].forEach.call(
            document.getElementsByClassName('mvc-grid'), function (element) {
                new MvcGrid(element);
            }
        );

    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
<script type="text/javascript">
    $(document).ready(function () {
        $('.collapse').collapse
    });

</script>